{
  "name": "@jhuix/imark",
  "version": "0.1.0",
  "description": "a markdown to html converter",
  "license": "MIT",
  "keywords": [
    "remark",
    "markdown",
    "imark",
    "vite",
    "typescript"
  ],
  "private": false,
  "author": "Jhuix [Hui Jin] <jhuix0117@gmail.com>",
  "homepage": "https://github.com/jhuix-js/imark",
  "repository": "https://github.com/jhuix-js/imark",
  "type": "module",
  "main": "dist/imark.umd.cjs",
  "module": "dist/imark.js",
  "types": "types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/imark.js",
      "require": "./dist/imark.umd.cjs",
      "types": "./types/index.d.ts"
    },
    "./style.css": "./dist/imark.css"
  },
  "files": [
    "dist",
    "types"
  ],
  "scripts": {
    "build-tsc": "tsc --build --clean && tsc --build && type-coverage",
    "build": "tsc --build --clean && tsc --build && vite build",
    "dev": "vite --force",
    "build-dev": "tsc --build --clean && tsc --build && vite build --mode dev",
    "format": "prettier ./src --log-level warn --write",
    "prepack": "npm run format && npm run build",
    "test": "npm run format && npm run build && npm run test-coverage",
    "test-dev": "node --conditions development test/test.js",
    "preview": "vite preview"
  },
  "dependencies": {
    "@adobe/remark-gridtables": "^3.0.14",
    "@jhuix/remark-gfm": "^5.0.2",
    "@ungap/structured-clone": "^1.3.0",
    "abcjs": "^6.5.1",
    "echarts": "^5.6.0",
    "github-slugger": "^2.0.0",
    "hast-util-from-html-isomorphic": "^2.0.0",
    "hast-util-sanitize": "^5.0.2",
    "hast-util-to-mdast": "^10.1.2",
    "hast-util-to-text": "^4.0.2",
    "katex": "^0.16.22",
    "lodash": "^4.17.21",
    "mermaid": "^11.9.0",
    "railroad-diagrams": "^1.0.0",
    "rehype-format": "^5.0.1",
    "rehype-raw": "^7.0.0",
    "rehype-sanitize": "^6.0.0",
    "rehype-stringify": "^10.0.1",
    "remark-directive": "^4.0.0",
    "remark-emoji": "^5.0.2",
    "remark-rehype": "^11.1.2",
    "unified": "^11.0.5",
    "unist-util-visit-parents": "^6.0.1",
    "vega": "^6.1.2",
    "vega-embed": "^7.0.2",
    "wavedrom": "^3.5.0"
  },
  "devDependencies": {
    "@jridgewell/sourcemap-codec": "^1.5.4",
    "@rollup/plugin-inject": "^5.0.5",
    "@rollup/plugin-replace": "^6.0.2",
    "@types/katex": "^0.16.7",
    "@types/lodash": "^4.17.20",
    "@types/node": "^24.0.14",
    "@types/ungap__structured-clone": "^1.2.0",
    "prettier": "^3.6.2",
    "rolldown-vite": "^7.0.9",
    "type-coverage": "^2.29.7",
    "typescript": "^5.8.3",
    "vite": "npm:rolldown-vite@latest",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "typeCoverage": {
    "atLeast": 100,
    "detail": true,
    "ignoreCatch": true,
    "strict": true
  }
}
